<div class="login-page">
    <div class="loginForm">
        <div class="login-logo"><img class="ryde-logo" src="/images/ryde-logo.svg"></div>


        <form action="/register" method="post">
            <label for="username">Username:</label><br>
            <input type="email" name="username" placeholder="Create a username"><br>
            <label for="password">Password:</label>
            <input type="password" name="password" placeholder="Enter a password"><br>
            <label for="password_verify">Verify password:</label>
            <input type="password_verify" name="password_verify" placeholder="Verify your password"><br>

            <div class="center">
                <a href="/" class="loginCancel">Back</a>
                <input class="loginSubmit" type="submit" value="Register">
            </div>
        </form>
    </div>

</div>

</div>

