<div class="login-page">
    <div class="loginForm">
        <div class="login-logo"><img class="ryde-logo" src="/images/ryde-logo.svg"></div>

        <form name="form1" method="post" action="/login">
            <label for="email">Email:</label><br>
            <input  {{#if noUsername}} class="error-input" {{/if}} type="email" name="username" placeholder="Enter your email address">
            {{#if noUsername}}
            <span class="error-img">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="-5 44 39.6 39.6">
                    <path d="M17.6 63.8l17 17-2.8 2.8-17-17-17 17-2.8-2.8 17-17-17-17 2.8-2.8 17 17 17-17 2.8 2.8-17 17z" class="small-cross"/>
                </svg>
            </span>
            {{/if}}
            <span class="correct-login-img">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="-20.2 28.8 74.5 74.5">
                <path d="M1.5 93.6l-21.7-21.7 2.8-2.8L1.5 88l50-50 2.8 2.8L1.5 93.6z" class="small-tick"/>
            </svg>
            </span>
            <br>
            {{#if noUsername}}
            <div class="error">Whops! You forgot to enter your email</div>
            {{/if}}
            <label for="password">Password:</label>
            <label class="passwordReset"><a href="#">Forgot my password</a></label><br>
            <input {{#if badPassword}} class="error-input"{{/if}} type="password" name="password" placeholder="Enter your password">
            {{#if badPassword}}
            <span class="error-img">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="-5 44 39.6 39.6">
                    <path d="M17.6 63.8l17 17-2.8 2.8-17-17-17 17-2.8-2.8 17-17-17-17 2.8-2.8 17 17 17-17 2.8 2.8-17 17z" class="small-cross"/>
                </svg>
            </span>
            {{/if}}
            <span class="correct-login-img">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="-20.2 28.8 74.5 74.5">
                <path d="M1.5 93.6l-21.7-21.7 2.8-2.8L1.5 88l50-50 2.8 2.8L1.5 93.6z" class="small-tick"/>
            </svg>
            </span>
            <br>
            {{#if badPassword}}
            <div class="error">Sorry, that password isn't right</div>
            {{/if}}
            <div class="center">
                <a href="/" class="loginCancel">Back</a>
                <input class="loginSubmit" type="submit" value="Login">
            </div>
        </form>
    </div>
</div>
