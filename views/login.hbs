<div class="login-page">
    <div class="loginForm">
        <div class="login-logo"><img class="ryde-logo" src="/images/ryde-logo.svg"></div>

        <form name="form1" method="post" action="/login">
            <label for="email">Email:</label><br>
            <input type="email" name="email" placeholder="Enter your email address"><br>
            <div class="error">Whops! You forgot to enter your email</div>
            <label for="password">Password:</label>
            <label class="passwordReset"><a href="#">Forgot my password</a></label><br>
            <input type="password" name="password" placeholder="Enter your password"><br>
            <div class="error">Sorry, that password isn't right</div>
            <div class="center">
                <a href="/" class="loginCancel">Back</a>
                <input class="loginSubmit" type="submit" value="Login">
            </div>
        </form>
    </div>
</div>
